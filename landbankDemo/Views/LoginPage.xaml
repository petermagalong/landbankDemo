<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="landbankDemo.Views.LoginPage"
             BackgroundColor="#66ff99">
    <ContentPage.Content>
        <StackLayout Margin="40,20,40,20" VerticalOptions="End">
            <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/8/83/Landbank.svg/1200px-Landbank.svg.png" Margin="1,40,1,50"/>
            <Entry Placeholder="Username" Text="{Binding User}" HorizontalOptions="FillAndExpand" />
            <Entry Placeholder="Password" Text="{Binding Password}" HorizontalOptions="FillAndExpand" IsPassword="True"/>
            <Label Text="{Binding LoginResult}" HorizontalOptions="FillAndExpand" />
            <Button Text="Login"
                    BackgroundColor="#009999"
                    TextColor="White"
                    Command="{Binding LoginCommand}"
                    HorizontalOptions="FillAndExpand" Margin="1,1,1,100"/>
            <Label  Text="REGISTER" VerticalOptions="Center" FontSize="Body">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding RegisterCommand}"
                                          NumberOfTapsRequired="1"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>  
</ContentPage>
